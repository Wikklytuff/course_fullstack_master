page {
  position: relative;
  width: 100vw; /* 相对单位viewport width */
  height: 100vh; /* 相对单位viewport height */
}


.container {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  height: 60%;
  border: 1px solid brown;
  margin: 20px auto;
  overflow: hidden;
  border-radius: 5px;
  text-align: center;

}
.title {
  color: brown;
  font-style: 20px;
}